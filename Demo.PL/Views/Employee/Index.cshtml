@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-black-50">All employees </h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
<br />
<form asp-action="Index">
    <div class="row align-item-center justify-content-center">
        <div class="col-8">
            <input type="text" class="form-control" placeholder="Search by Name" name="SearchValue" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-primary" value="Search"/>
            @if (ViewData["SearchPage"] == "SearchPageSuccess")
            {
            <input type="submit" asp-action="Index" asp-route-SearchValue="null" class="btn btn-info" value="Cancel Search"/>
            }
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Age)</th>
                <th>@Html.DisplayNameFor(d => d.Address)</th>
                <th>@Html.DisplayNameFor(d => d.Image)</th>
                <th>@Html.DisplayNameFor(d => d.Department.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Salary)</th>
                <th>@Html.DisplayNameFor(d => d.IsActive)</th>
                <th>@Html.DisplayNameFor(d => d.Email)</th>
                <th>@Html.DisplayNameFor(d => d.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(d => d.HireDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => employee.Name)</td>
                    <td>@Html.DisplayFor(m => employee.Age)</td>
                    <td>@Html.DisplayFor(m => employee.Address)</td>
                    <td> <img src="~/files/images/@employee.ImageName" alt="Employee Image" class="img-thumbnail" width="30" height="30"/></td>
                    <td>@Html.DisplayFor(m => employee.Department.Name)</td>
                    <td>@Html.DisplayFor(m => employee.Salary)</td>
                    <td>@Html.DisplayFor(m => employee.IsActive)</td>
                    <td>@Html.DisplayFor(m => employee.Email)</td>
                    <td>@Html.DisplayFor(m => employee.PhoneNumber)</td>
                    <td>@Html.DisplayFor(m => employee.HireDate)</td>
                    <partial name="ButtonsPartialView" model="@employee.Id.ToString()"></partial>
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-5">
        <table class="mt-3 table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(d => d.Name)</th>
                    <th>@Html.DisplayNameFor(d => d.Age)</th>
                    <th>@Html.DisplayNameFor(d => d.Address)</th>
                    <th>@Html.DisplayNameFor(d => d.Department.Name)</th>
                    <th>@Html.DisplayNameFor(d => d.Salary)</th>
                    <th>@Html.DisplayNameFor(d => d.IsActive)</th>
                    <th>@Html.DisplayNameFor(d => d.Email)</th>
                    <th>@Html.DisplayNameFor(d => d.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(d => d.HireDate)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>
        <h3 class="mt-5 alert alert-warning">
            No Emplyees Available!
        </h3>
    </div>
}

